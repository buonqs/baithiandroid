<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroundgameview"
    tools:context=".Playgame">
<TextView
    android:id="@+id/txtscore"
    android:textColor="@android:color/holo_red_dark"
    android:text="Điểm của tui : 0 "
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
</TextView>
    <LinearLayout
        android:id="@+id/lnlife"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imgplaneife1"
            android:src="@drawable/airportlife"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/imgplanelife2"
            android:src="@drawable/airportlife"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/imgplanelife3"
            android:src="@drawable/airportlife"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/btn1"
            android:text="Pause"
            android:onClick="xulydung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />
        <Button
            android:id="@+id/btn2"
            android:text="New Game"
            android:onClick="xulymogamemoi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <Button
            android:id="@+id/btn3"
            android:text="Exit"
            android:onClick="xulythoat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/txtplay"
            android:text="tap to play"
            android:textAllCaps="true"
            android:textSize="40dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <ImageView
           android:id="@+id/face1"
            android:layout_width="69dp"
            android:layout_height="89dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/face1" />




        <ImageView
        android:id="@+id/food1"
        android:src="@drawable/cupcake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
        <ImageView
            android:id="@+id/food2"
            android:src="@drawable/hotdog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:id="@+id/food3"
            android:src="@drawable/pizza"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:id="@+id/dead"
            android:src="@drawable/darksun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </FrameLayout>






</LinearLayout>